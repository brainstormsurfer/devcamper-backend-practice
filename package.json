{
  "name": "devcamper_api",
  "version": "1.0.0",
  "description": "Devcamper backend API",
  "main": "/server.js",
  "type": "module", 
  "scripts": {    
      "generate-docs": "npx docgen-tool run -i . -o ./docs",
      "build": "rimraf dist && tsc -p tsconfig.json && yarn copy:files",
      "run:build": "dist/docgen.js",
      "build:docs": "ts-node src/docgen.js run -i src/docs -o ./docs -p -m -n -d 40000",
      "build:docs:nopdf": "ts-node src/docgen.js run -i src/docs -m -n -o ./docs",
      "build:styles": "sass --no-source-map src/styles/main.scss src/include/require/styles/framework.css",
      "start": "set NODE_ENV=production && node server",
      "dev": "nodemon server"
    }
    
  },
  "author": "Brad Traversy",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "node-geocoder": "^4.2.0",
    "nodemailer": "^6.9.7",
    "slugify": "^1.6.6",
    "xss": "^1.0.14"
}
